<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gallery_submission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exhibition.exhibition.GallerySubmissionActivity">

    <TextView
        android:id="@+id/description"
        android:padding="15dp"
        android:textSize="15dp"
        android:text="These are the submissions that fellow Artists have sent to this Gallery to be showcased!"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:paddingLeft="20dp"
        android:layout_below="@+id/description"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
